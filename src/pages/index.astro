---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import PlatformStrip from "../components/PlatformStrip.astro";
import DealsCarousel from "../components/DealsCarousel.astro";
import BestSellersGrid from "../components/BestSellersGrid.astro";
import ReviewCard from "../components/ReviewCard.astro";
import HoursAndLocation from "../components/HoursAndLocation.astro";
import site from "../data/site.json";
import { Image } from "astro:assets";
import heroImage from "../assets/images/hero-main.webp";

const base = import.meta.env.BASE_URL.endsWith("/")
	? import.meta.env.BASE_URL
	: `${import.meta.env.BASE_URL}/`;

const reviews = [
	{
		name: "Sarah M.",
		rating: 5,
		text: "Best pizza in the neighbourhood! The pepperoni is crispy and the base is perfect.",
		date: "2 days ago",
	},
	{
		name: "Mike T.",
		rating: 5,
		text: "Fast delivery and the family feast deal is a lifesaver on Fridays.",
		date: "1 week ago",
	},
	{
		name: "Jess K.",
		rating: 4,
		text: "Great vegan options, love the veggie supreme. Could use more side options though.",
		date: "3 weeks ago",
	},
];
---

<BaseLayout title="Street-Style Pizza | Concept Demo">
	<!-- Hero -->
	<section
		class="relative bg-cream pt-20 pb-32 md:py-32 overflow-hidden border-b-2 border-charcoal"
	>
		<div class="absolute inset-0 z-0">
			<Image
				src={heroImage}
				alt="Fresh pizza background"
				class="w-full h-full object-cover opacity-[0.55] grayscale-[10%]"
				loading="eager"
			/>
		</div>
		<div class="container mx-auto px-4 relative z-10 text-center">
			<h1
				class="font-heading font-black text-5xl md:text-7xl lg:text-9xl uppercase leading-[0.85] text-charcoal mb-8 max-w-5xl mx-auto tracking-tighter"
			>
				Hot Pizza <br /><span class="text-primary">In 20 Mins.</span><br
				/> Concept Demo.
			</h1>

			<p
				class="text-xl md:text-2xl text-charcoal/80 mb-10 max-w-2xl mx-auto font-medium leading-relaxed"
			>
				Authentic street-style pizza. Fresh ingredients. <br
					class="hidden md:inline"
				/>Example layout showcasing typography, motion, and UI patterns.
			</p>

			<div
				class="flex flex-col md:flex-row gap-6 justify-center items-center"
			>
				<Button
					href={site.orderUrl}
					variant="primary"
					size="lg"
					class="text-xl w-full md:w-auto shadow-[8px_8px_0px_0px_#1A1A1A]"
				>
					Order Online
				</Button>
				<Button
					href={`${base}menu`}
					variant="outline"
					size="lg"
					class="text-xl bg-white w-full md:w-auto"
				>
					View Menu
				</Button>
			</div>
		</div>
	</section>

	<PlatformStrip />

	<DealsCarousel />

	<BestSellersGrid />

	<!-- Trust / Reviews -->
	<section class="py-24 bg-white border-y-2 border-charcoal">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center mb-16">
				<h2
					class="text-3xl md:text-5xl font-heading font-black uppercase mb-4 leading-none"
				>
					Trusted by Locals
				</h2>
				<p class="text-xl text-charcoal/80">
					Built to showcase brand voice, pacing, and conversion patterns.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				{reviews.map((review) => <ReviewCard {...review} />)}
			</div>
		</div>
	</section>

	<section class="py-20 bg-cream">
		<div class="container mx-auto px-4 text-center">
			<h2
				class="text-2xl font-heading uppercase font-bold text-charcoal/50 mb-8"
			>
				Flavour Styles
			</h2>
			<div
				class="flex flex-wrap justify-center gap-4 md:gap-8 text-xl font-bold text-charcoal uppercase tracking-wider"
			>
				<span>Classic</span>
				<span class="text-primary">ƒ?›</span>
				<span>Spicy</span>
				<span class="text-primary">ƒ?›</span>
				<span>Veggie</span>
				<span class="text-primary">ƒ?›</span>
				<span>Vegan</span>
				<span class="text-primary">ƒ?›</span>
				<span>Family Feast</span>
				<span class="text-primary">ƒ?›</span>
				<span>Late Night</span>
			</div>
		</div>
	</section>

	<HoursAndLocation />
</BaseLayout>
